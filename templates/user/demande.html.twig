{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table>
        <tr>
            <td>id</td>
            <td>type</td>
            <td>nom</td>
            <td>prenom</td>
            <td>created_at</td>
            <td>generer</td>
            <td>rejeter</td>
        </tr>
        {% for demande in demandes %}
            <tr>
                <td id="{{ demande.id }}">{{ demande.id }}</td>
                <td>{{ demande.nom }}</td>
                <td>{{ demande.prenom }}</td>
                <td>{{ demande.name }}</td>
                <td>{{ demande.created_at|date("d-m-Y") }}</td>
                <td><a class="btn shadow-1 rounded-1 blue dark" href="{{ path('pdf_create', { 'id': demande.id }) }}">Creer</a></td>
                <td><a class="btn shadow-1 rounded-1 blue red" href="{{ path('rejeter', { 'id': demande.id }) }}">rejeter</a></td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
