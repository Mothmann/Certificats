{% extends 'baseadmin.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>
        #register{
            text-align: center;
            width: 25%;
            margin: auto;
        }
        #register div{
            margin: 2rem;
        }
        #register button{
            margin: auto;
        }
    </style>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div id="register">
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        <div>{{ form_row(registrationForm.email) }}</div>
        <div>{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}</div>
        <div>{{ form_row(registrationForm.agreeTerms) }}</div>

       <div> <button type="submit" class="btn">Register</button></div></div>
    {{ form_end(registrationForm) }}
{% endblock %}
