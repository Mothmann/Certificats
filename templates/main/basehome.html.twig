<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Certificat{% endblock %}</title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@0.5.3/dist/css/axentix.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">

        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" type="text/css " href="{{ asset('css/home.css') }}">
        <script src="https://cdn.jsdelivr.net/npm/axentix@0.5.3/dist/js/axentix.min.js"></script>
    </head>
    <body>
        <header>
            <nav class="navbar primary">
                <a href="{{ path('app_home') }}" class="logo navbar-brand">Certificats</a>
                <div class="navbar-menu ml-auto">
                    <a class="navbar-link" href="{{ path('app_home') }}"><i class="bi bi-house-door-fill"></i></a>
                    <a class="navbar-link" href="{{ path('certificat_create') }}"/><i class="bi bi-card-heading"></i></a>
                    <a class="navbar-link" href="{{ path('user_profile') }}"><i class="bi bi-person-fill"></i></a>
                    <a class="navbar-link" href="{{ path('notification') }}"><i class="bi bi-bell-fill"></i></a>
                    {% if app.user %}
                        <a class="navbar-link" href="{{ path('app_logout') }}"><i class="bi bi-power"></i></a>
                    {% else %}
                        <a class="navbar-link" href="{{ path('app_login') }}"><i class="bi bi-power"></i></a>
                    {% endif %}
                </div>
            </nav>
        </header>
        <main>
            {% block body %}{% endblock %}
        </main>
        <footer class="footer primary">
            Copyright Â© 2020 - Certificats
        </footer>
    </body>
</html>
